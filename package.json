{
	"name": "project-management-api",
	"version": "1.0.0",
	"description": "Project Management API built with Bun and Elysia",
	"main": "src/app.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "bun run --watch src/app.ts",
		"start": "bun run src/scripts/validate-config.ts && bun run src/app.ts",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"build": "bun build src/app.ts --outdir ./dist --target bun",
		"db:init": "bun run src/scripts/init-db.ts",
		"db:seed": "bun run src/scripts/seed-data.ts",
		"db:reset": "bun run src/scripts/init-db.ts && bun run src/scripts/seed-data.ts",
		"setup": "bun run src/scripts/complete-setup.ts development",
		"setup:env": "bun run src/scripts/setup-env.ts",
		"setup:prod": "bun run src/scripts/complete-setup.ts production",
		"setup:test": "bun run src/scripts/complete-setup.ts test",
		"validate": "bun run src/scripts/validate-config.ts",
		"perf:test": "bun run src/scripts/performance-monitor.ts test",
		"perf:load": "bun run src/scripts/performance-monitor.ts load",
		"perf:monitor": "bun run src/scripts/performance-monitor.ts monitor"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.4",
		"@types/bcryptjs": "^3.0.0",
		"@types/bun": "latest"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@elysiajs/bearer": "^1.4.1",
		"@elysiajs/cors": "^1.4.0",
		"@elysiajs/jwt": "^1.4.0",
		"@elysiajs/swagger": "^1.3.1",
		"@sinclair/typebox": "^0.34.41",
		"bcryptjs": "^3.0.2",
		"elysia": "^1.4.5"
	}
}
